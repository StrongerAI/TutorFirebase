
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Temporarily allow any authenticated user to read. FOR DIAGNOSTIC PURPOSES.
      allow read: if request.auth != null;
      // Keep writes secure: only the user can write to their own document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
